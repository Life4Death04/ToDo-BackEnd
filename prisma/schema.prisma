generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{                           //We can use uuid() instead of autoincrement() to avoid what we know
  id              Int         @id         @default(autoincrement())
  firstName       String      @db.VarChar(50)    
  lastName        String      @db.VarChar(50)
  email           String      @unique
  password        String  
  profileImage    String?     @db.VarChar(255)
  phoneNumber     String?     @db.VarChar(30)
  createdAt       DateTime    @default(now()) @db.Timestamp(0)
  emailVerified   Boolean     @default(false)
  tasks           Task[]      // Tasks created by the user
  lists           List[]      // Lists created by the user
}

model List{
  id              Int         @id       @default(autoincrement())
  title           String      @db.VarChar(50)
  color           String      @db.VarChar(20) @default("#000000")//Color code
  authorId        Int         // User who created the list
  author          User        @relation(fields: [authorId], references: [id])
  tasks           Task[]      // Tasks in the list
  createdAt       DateTime    @default(now()) @db.Timestamp(0)
}
model Task{
  id              Int         @id       @default(autoincrement())
  taskName        String      @db.VarChar(100)
  description     String?     @db.VarChar(200)
  status          Status      
  dueDate         DateTime?   
  priority        Priority    @default(LOW)
  authorId        Int         // User who created the task
  author          User        @relation(fields: [authorId], references: [id])
  listId          Int?        // List to which the task belongs
  list            List?        @relation(fields: [listId], references: [id])
}

enum Status { // Status of the task
  TODO
  IN_PROGRESS
  DONE
}

enum Priority { // Priority of the task
  LOW
  MEDIUM
  HIGH
}